<% if @survey.errors.any? %>
    <div class="alert alert-danger">
        <ul>
            <% @survey.errors.full_messages.each do |message|%>
                <li><%=message%></li>
            <%end%>
        </ul>
    </div>
<%end%>
<%= form_for @survey do |f| %>
    <div class="form-group">
         <!--<input class="form-control" type='text' name='date' placeholder='Class Date'>-->
        <%= f.hidden_field :lesson_id%>
    </div>
    <div class='row'>
        <div class="col-md-12">
            How difficult was the class?
        </div>
    </div>
        <label class="radio-inline">
            <%=f.radio_button('difficulty', "1")%>1
              <!--<input type="radio" name='difficulty' value="1">1-->
         </label>
         <label class="radio-inline">
              <%=f.radio_button('difficulty', "2")%>2
         </label>
         <label class="radio-inline">
               <%=f.radio_button('difficulty', "3")%>3
         </label>
         <label class="radio-inline">
               <%=f.radio_button('difficulty', "4")%>4
         </label>
         <label class="radio-inline">
               <%=f.radio_button('difficulty', "5")%>5
         </label>
  <div class="form-group">
      <%=f.text_area :comments, class: 'form-control', placeholder: "Comments"%>
      <!--<textarea class="form-control" type='text' name="comment" placeholder="Any comments?"></textarea>-->
  </div>
  <%=f.submit%>
  <!--<input class="form-control" type="submit" value="Save">-->
<%end%>