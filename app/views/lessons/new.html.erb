<% if @lesson.errors.any? %>
    <div class="alert alert-danger">
        <ul>
            <% @lesson.errors.full_messages.each do |message|%>
                <li><%=message%></li>
            <%end%>
        </ul>
    </div>
<%end%>
<%= form_for @lesson do |f| %>
    <div class="form-group">
         <!--<input class="form-control" type='text' name='date' placeholder='Class Date'>-->
        <%= f.date_field :date, class: 'form-control', placeholder: 'Date'%>
    </div>
    <div class="form-group">
        <%= f.text_field :video_url, class: "form-control", placeholder:"Video link"%>
    </div>
  <div class="form-group">
      <%=f.text_area :notes, class: 'form-control', placeholder: "Notes"%>
      <!--<textarea class="form-control" type='text' name="comment" placeholder="Any comments?"></textarea>-->
  </div>
  <%=f.submit%>
  <!--<input class="form-control" type="submit" value="Save">-->
<%end%>